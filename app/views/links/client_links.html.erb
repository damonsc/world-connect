<%= render 'home/header' %>


<p id="notice"><%= notice %></p>

<h1>Content Code Links</h1>

<table class="table">
  <thead>
    <tr>
		<th>Title</th>
      <th>Content link</th>
      <th>Image link</th>
      <th>Content code matcher</th>
		<th>Client code matcher</th>
		 <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
		  <% if link.client_code_matcher != 0  %>
		  <td><%= link.title %></td>
        <td><%= link.content_link %></td>
        <td><%= link.image_link %></td>
        <td><%= link.content_code_matcher %></td>
		  <td><%= link.client_code_matcher %></td>
		  <td><%= link.location %></td>
        <td><%= link_to 'Show', link %></td>
        <td><%= link_to 'Edit', edit_link_path(link) %></td>
        <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		  <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Link', new_link_path %>
