<p id="notice"><%= notice %></p>
<%= render 'home/header' %>
<h1>Employees</h1>

<table class="table">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Assigned username</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.first_name %></td>
          <td><%= employee.last_name %></td>
        <td><%= employee.assigned_username %></td>
      
        <td><%= link_to 'Terminate', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Employee', new_employee_path %>
