<div class="panel panel-default">
	<div class="panel-heading">

<%= form_with(model: update, local: true) do |form| %>
  <% if update.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(update.errors.count, "error") %> prohibited this update from being saved:</h2>

      <ul>
        <% update.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div></div>
  <% end %>
	
<div class="panel-body">
	<div class:'form-control'>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, class:'form-control' %>
  </div>
	</div>
	<% if current_user.admin %>
<div class:'form-control'>
  <div class="field">
	 
    <%= form.label :reference_code %>
<%= current_user.content_code %><p>If posting to Admin notes area. Enter the above reference code before creating note. If not posting to Admin notes area leave blank.</p>
    <%= form.text_field :reference_code, class:'form-control' %>
  </div>
	</div>
	<% end %>
	
	<div class:'form-control'>
  <div class="field">
    <%= form.label :Note %>
    <%= form.text_area :status, class:'form-control' %>
  </div>
	</div>
	
	

	
    <%= form.hidden_field :creater, value: current_user.first_name %>
  

	<div class:'form-control'>
  <div class="field">
    <%= form.label :time %>
    <%= form.datetime_select :time, class:'form-control' %>
  </div>
	</div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
		

	</div>
